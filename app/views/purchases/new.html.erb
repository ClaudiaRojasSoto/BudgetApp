<div class="blue">
  <div class="container-sm">
    <div class="header-container blue d-flex justify-between align-center">
      <a href="<%= categories_path %>" class="back-arrow">‚Üê</a>
      <h1 class="category-title">Add Transaction</h1>
      <a href="<%= home_start_path %>" class="btn-login blue"><i class="fa-solid fa-magnifying-glass" style="color: #ffffff;"></i></a>
    </div>

  </div>

</div>

<%= form_with(model: @purchase, url: purchases_path, local: true) do |form| %>


    <div class="field">
      <%= form.text_field :name, required: true, placeholder: "Name", class: "field-input" %>
    </div>

    <div class="field">
      <%= form.number_field :amount, required: true, placeholder: "Amount", class: "field-input" %>
    </div>


  <div class="field">
    <select name="category_ids[]" class="field-input">
    <option value="">Categories</option>

    <% current_user.categories.each do |category| %>
      <option value="<%= category.id %>"><%= category.name %></option>
      <% end %>  
    </select>
  </div>


    <div class="new-button-container">
      <%= form.submit "Save", class: "start-button new-button green" %>
    </div>
  <% end %>
</div>
