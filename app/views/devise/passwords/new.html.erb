<div class="container form-login">
  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, class: 'login-form' }) do |f| %>


<div class="header-container blue">
      <a href="<%= root_path %>" class="back-arrow">‚Üê</a>
      <h2 id="login-title">Forgot your password?</h2>
      <%= f.submit "instructions", class: "btn-login blue" %>
    </div>

<%= render "devise/shared/error_messages", resource: resource %>
    <div class="field">
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "input", placeholder: "Email" %>
    </div>


  <% end %>

  <div class="forgot-password">
  <%= link_to "Log in" , new_user_session_path %> |
  <%= link_to "Sign up" , new_user_registration_path %> |
</div>
</div>
